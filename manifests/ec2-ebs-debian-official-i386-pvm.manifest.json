{
	"provider":       "ec2",
	"virtualization": "pvm",
	"credentials":    {
		// "access-key": null,
		// "secret-key": null
	},

	"bootstrapper": {
		"workspace": "/target"
	},
	"image": {
		"name":        "debian-{system.release}-{system.architecture}-{virtualization}-{%Y}-{%m}-{%d}-ebs",
		"description": "Debian {system.release} {system.architecture}"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "i386",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"volume": {
		"backing": "ebs",
		"partitions": {
			"type": "none",
			"root": {
				"size":       8192,
				"filesystem": "ext4"
			}
		}
	},
	"packages": {
		"sources": {
			"backports": [
				"deb     {apt_mirror} {system.release}-backports main",
				"deb-src {apt_mirror} {system.release}-backports main"
			]
		},
		"remote": [
			"sudo",
			{ "name": "cloud-init", "target": "{system.release}-backports" }
		]
	},
	"plugins": {
		"cloud_init": {
			"username": "admin",
                        //"metadata_sources": "Ec2",
			"disable_modules": [ "landscape", "byobu", "ssh-import-id" ]
		}
	}
}
