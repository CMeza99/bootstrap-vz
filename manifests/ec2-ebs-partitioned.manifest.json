{
	"provider":       "ec2",
	"virtualization": "pvm",
	"credentials":    {
		// "access-key": null,
		// "secret-key": null
	},

	"bootstrapper": {
		"workspace": "/target"
	},
	"image": {
		"name":        "debian-{system.release}-{system.architecture}-{virtualization}-{%y}{%m}{%d}",
		"description": "Debian {system.release} {system.architecture} AMI ({virtualization})"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"packages": {},
	"volume": {
		"backing": "ebs",
		"partitions": {
			"type": "mbr",
			"root": {
				"size":       1023,
				"filesystem": "ext4"
			}
		}
	}
}
