{
	"provider":       "ec2",
	"virtualization": "pvm",
	"credentials":    {
		"access-key": null,
		"secret-key": null
	},

	"bootstrapper": {
		"mount_dir": "/target",
		"mirror": "http://http.debian.net/debian"
	},
	"image": {
		"name":        "debian-{release}-{architecture}-{virtualization}-{%Y}{%m}{%d}",
		"description": "Debian {release} {architecture} AMI ({virtualization})"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"volume": {
		"backing":    "ebs",
		"filesystem": "ext4",
		"size":       8192
	},
	"plugins": {
		"admin_user": {
			"enabled": false
		},
		"build_metadata": {
			"enabled": false,
			"path":    "/root/build-metadata-{ami_name}"
		},
		"prebootstrapped": {
			"enabled":  false,
			"snapshot": ""
		}
	}
}
