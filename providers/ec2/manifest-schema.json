{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "EC2 manifest",
	"type": "object",
	"properties": {
		"credentials": {
			"type": "object",
			"properties": {
				"access-key": {
					"type": "string"
				},
				"secret-key": {
					"type": "string"
				}
			}
		},
		"volume": {
			"type": "object",
			"properties": {
				"backing": {
					"type": "string",
					"enum": ["ebs", "s3"]
				},
				"filesystem": {
					"type": "string",
					"enum": ["ext2", "ext3", "ext4", "xfs"]
				}
			},
			"required": ["backing", "filesystem"]
		}
	},
	"required": ["volume"]
}
