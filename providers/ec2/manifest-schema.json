{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "EC2 manifest",
	"type": "object",
	"properties": {
		"image": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				}
			}
		},
		"credentials": {
			"type": "object",
			"properties": {
				"access-key": {
					"type": "string"
				},
				"secret-key": {
					"type": "string"
				}
			}
		},
		"volume": {
			"type": "object",
			"properties": {
				"backing": { "enum": ["ebs", "s3"] }
			},
			"required": ["backing"]
		}
	},
	"required": ["image"]
}
